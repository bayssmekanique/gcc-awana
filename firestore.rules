rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuper() {
      return isSignedIn() && get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.super == true;
    }

    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get, update: if isOwner(userId) || isSuper();
      allow list: if isSuper();
    }

    match /userRoles/{userId} {
      allow get: if isOwner(userId) || isSuper();
      allow create, list, update, delete: if isSuper();
    }
  }
}